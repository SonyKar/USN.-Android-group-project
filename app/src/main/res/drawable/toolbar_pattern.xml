<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_purple" />
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                />
            <padding android:top="100dp" android:bottom="25dp" android:left="200dp" android:right="200dp"  />
        </shape>
    </item>

    <item android:left="-50dp" android:top="-200dp" android:right="-250dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary_dark_purple" />
<!--            <size android:height="400dp" android:width="400dp" />-->
       </shape>
    </item>

    <item android:left="-350dp" android:top="-250dp">
        <shape android:shape="oval" >
            <solid android:color="@color/primary_light_purple" />
<!--            <size android:height="300dp" android:width="300dp" />-->

        </shape>

    </item>

<!--    <item android:drawable="@drawable/supreme_background" />-->

</layer-list>